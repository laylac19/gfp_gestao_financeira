<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="1677515217217-1" author="layla.couto">
        <createSequence incrementBy="1" sequenceName="seq_fatura" startValue="1"/>
        <createTable tableName="fatura">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_fatura"/>
            </column>
            <column name="cartao_id" type="BIGINT"/>
            <column name="mes_referente" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="data_fechamento" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="data_venciemnto" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="valor_disonivel" type="DOUBLE"/>
            <column name="valor_total" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="pagamento_realizado" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="cartao_id" baseTableName="fatura" constraintName="FK_FATURA_ON_CARTAO"
                                 referencedColumnNames="id" referencedTableName="cartao"/>
    </changeSet>
</databaseChangeLog>
