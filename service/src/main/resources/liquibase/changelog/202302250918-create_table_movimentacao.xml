<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="1677515250289-1" author="basis">
        <createSequence incrementBy="1" sequenceName="seq_movimentacao" startValue="1"/>
        <createTable tableName="movimentacao">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_movimentacao"/>
            </column>
            <column name="data_lancamento" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="valor" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="tipo_movimentacao" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="data_vencimento" type="DATE"/>
            <column name="data_pag_efetuado" type="DATE"/>
            <column name="status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
