<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="1677515122245-1" author="layla.couto">
        <createSequence incrementBy="1" sequenceName="seq_caixinha" startValue="1"/>
        <createTable tableName="caixinha">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_caixinha"/>
            </column>
            <column name="banco_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="valor_total" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="banco_id" baseTableName="caixinha"
                                 constraintName="FK_CAIXINHA_ON_BANCO" referencedColumnNames="id"
                                 referencedTableName="banco"/>
    </changeSet>
</databaseChangeLog>
