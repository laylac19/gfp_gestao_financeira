<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="1677515159005-1" author="layla.couto">
        <createSequence incrementBy="1" sequenceName="seq_cartao" startValue="1"/>
        <createTable tableName="cartao">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cartao"/>
            </column>
            <column name="banco_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="bandeira_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="limite" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="apelido" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cartao_id" type="BIGINT"/>
            <column name="status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="banco_id" baseTableName="cartao" constraintName="FK_CARTAO_ON_BANCO" referencedColumnNames="id" referencedTableName="banco"/>
        <addForeignKeyConstraint baseColumnNames="bandeira_id" baseTableName="cartao" constraintName="FK_CARTAO_ON_BANDEIRA" referencedColumnNames="id" referencedTableName="bandeira"/>
        <addForeignKeyConstraint baseColumnNames="cartao_id" baseTableName="cartao" constraintName="FK_CARTAO_ON_CARTAO" referencedColumnNames="id" referencedTableName="cartao"/>
    </changeSet>
</databaseChangeLog>
